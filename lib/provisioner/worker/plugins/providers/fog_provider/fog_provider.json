{
  "name": "fog",
  "description": "Multi-cloud fog-based provider (AWS, Google, Openstack, Rackspace, Joyent)",
  "providertypes": [ "aws", "digitalocean", "google", "joyent", "openstack", "rackspace" ],
  "aws" : {
    "name": "aws",
    "classname": "FogProviderAWS",
    "resourceTypes": {
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        }
    },
    "parameters": {
      "admin": {
        "fields": {
          "api_user": {
            "label": "Access Key ID",
            "type": "text",
            "tip": "AWS Access Key ID"
          },
          "api_password": {
            "label": "Secret Access Key",
            "type": "password",
            "tip": "AWS Secret Access Key"
          },
          "ssh_keypair": {
            "label": "Key Pair Name",
            "type": "text",
            "override": true,
            "tip": "Your AWS EC2 key pair name"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "override": true,
            "tip": "Name of the SSH private key resource uploaded to the server"
          },
          "aws_region": {
            "label": "AWS Region",
            "type": "select",
            "options": [
              "ap-northeast-1",
              "ap-southeast-1",
              "ap-southeast-2",
              "eu-central-1",
              "eu-west-1",
              "sa-east-1",
              "us-east-1",
              "us-west-1",
              "us-west-2"
            ],
            "default": "us-east-1",
            "override": false,
            "tip": "AWS Region"
          },
          "aws_ebs_size": {
            "label": "EBS size",
            "type": "text",
            "default": 10,
            "override": true,
            "tip": "Size of EBS volume in GB, for EBS-backed instances"
          },
          "aws_ebs_delete_on_term": {
            "label": "EBS delete on termination",
            "type": "checkbox",
            "override": true,
            "default": true,
            "tip": "Delete EBS volumes on termination"
          },
          "security_groups": {
            "label": "Security Groups",
            "type": "text",
            "override": true,
            "default": "default",
            "tip": "AWS security group (non-VPC)"
          },
          "security_group_ids": {
            "label": "Security Group IDs (VPC only)",
            "type": "text",
            "override": true,
            "tip": "AWS security group IDs (required for VPC)"
          },
          "subnet_id": {
            "label": "Subnet ID (VPC only)",
            "type": "text",
            "override": true,
            "tip": "Enable VPC and use this subnet ID"
          },
          "dedicated_instance": {
            "label": "Use Dedicated instances (VPC only)",
            "type": "checkbox",
            "override": true,
            "tip": "Launch as dedicated instances (VPC only)"
          },
          "associate_public_ip": {
            "label": "Associate public IP (VPC only)",
            "type": "checkbox",
            "override": true,
            "default": true,
            "tip": "Associate public IP (VPC only)"
          },
          "provider_hostname": {
            "label": "Set hostname to provider-generated public DNS hostname (overrides DNS suffix)",
            "type": "checkbox",
            "override": true,
            "tip": "Set hostname to provider-generated public DNS hostname (overrides DNS suffix)"
          },
          "availability_zone": {
            "label": "Availability Zone",
            "type": "text",
            "override": true,
            "tip": "AWS Availability Zone"
          },
          "iam_instance_profile": {
            "label": "IAM instance profile",
            "type": "text",
            "override": true,
            "tip": "IAM instance profile to apply to cluster"
          },
          "placement_group": {
            "label": "Placement group",
            "type": "text",
            "override": true,
            "tip": "Placement group to place cluster instances"
          }
        },
        "required": [
          [
            "api_user",
            "api_password",
            "ssh_keypair",
            "ssh_key_resource",
            "aws_region",
            "security_groups"
          ],
          [
            "api_user",
            "api_password",
            "ssh_keypair",
            "ssh_key_resource",
            "aws_region",
            "security_group_ids",
            "subnet_id"
          ]
        ]
      }
    }
  },
  "digitalocean": {
    "name": "digitalocean",
    "classname": "FogProviderDigitalOcean",
    "resourceTypes": {
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        }
    },
    "parameters": {
      "admin": {
        "fields": {
          "api_user": {
            "label": "Client ID",
            "type": "text",
            "tip": "Your DigitalOcean Client ID"
          },
          "api_password": {
            "label": "API key",
            "type": "password",
            "tip": "Your DigitalOcean API key"
          },
          "digitalocean_region": {
            "label": "Region",
            "type": "select",
            "options": [ "sfo1", "nyc2", "ams2", "sgp1", "lon1", "nyc3", "ams3" ],
            "default": "nyc2",
            "override": true,
            "tip": "DigitalOcean Region"
          },
          "ssh_keypair": {
            "label": "Key Name",
            "type": "text",
            "tip": "Your DigitalOcean SSH key name"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "tip": "Name of the SSH private key resource uploaded to the server"
          }
        },
        "required": [
          [
            "api_user",
            "api_password",
            "ssh_keypair",
            "ssh_key_resource",
            "digitalocean_region"
          ]
        ]
      }
    }
  },
  "google": {
    "name": "google",
    "classname": "FogProviderGoogle",
    "resourceTypes": {
        "api_keys": {
            "format": "file",
            "permissions": "0400"
        },
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        }
    },
    "parameters": {
      "admin": {
        "fields": {
          "google_project": {
            "label": "Project ID",
            "type": "text",
            "tip": "Google Project ID"
          },
          "google_client_email": {
            "label": "Service account email address",
            "type": "text",
            "tip": "Service account email address, should be of the form 123456789@developer.gserviceaccount.com"
          },
          "api_key_resource": {
            "label": "API Key Resource Name",
            "type": "text",
            "tip": "Name of the P12 key resource uploaded to the server"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "tip": "Name of the SSH key resource uploaded to the server"
          },
          "ssh_user": {
            "label": "SSH Username",
            "type": "text",
            "tip": "SSH username. A corresponding key must be configured in the portal"
          },
          "google_data_disk_size_gb": {
            "label": "Data disk size(s) in GB",
            "type": "text",
            "default": 200,
            "override": true,
            "tip": "Size of the persistent data disk to be created and mounted. Multiple disks can be specified as a comma-separated list"
          },
          "google_data_disk_type": {
            "label": "Data disk(s) type",
            "type": "select",
            "options": [
              "standard",
              "ssd"
            ],
            "default": "standard",
            "override": true,
            "tip": "Disk type"
          },
          "google_root_disk_size_gb": {
            "label": "Root disk size in GB",
            "type": "text",
            "default": 10,
            "override": true,
            "tip": "Size of the root disk to be created. Image must support resizing, or you must resize yourself"
          },
          "google_root_disk_type": {
            "label": "Root disk type",
            "type": "select",
            "options": [
              "standard",
              "ssd"
            ],
            "default": "standard",
            "override": true,
            "tip": "Disk type"
          },
          "zone_name": {
            "label": "Zone",
            "type": "select",
            "options": [
              "asia-east1-a",
              "asia-east1-b",
              "asia-east1-c",
              "asia-northeast1-a",
              "asia-northeast1-b",
              "asia-northeast1-c",
              "europe-west1-b",
              "europe-west1-c",
              "europe-west1-d",
              "us-central1-a",
              "us-central1-b",
              "us-central1-c",
              "us-central1-f",
              "us-east1-b",
              "us-east1-c",
              "us-east1-d",
              "us-west1-a",
              "us-west1-b"
            ],
            "default": "us-central1-a",
            "override": true,
            "tip": "Zone"
          },
          "provider_hostname": {
            "label": "Set hostname to provider-specific public DNS hostname (overrides DNS suffix)",
            "type": "checkbox",
            "override": true,
            "tip": "Set hostname to provider-specific public DNS hostname (overrides DNS suffix)"
          }
        },
        "required": [
          [
            "google_project",
            "google_client_email",
            "api_key_resource",
            "ssh_key_resource",
            "zone_name"
          ]
        ]
      },
      "user": {
        "fields": {
          "network": {
            "label": "Network",
            "type": "text",
            "tip": "Google custom network"
          }
        },
        "required": [
          []
        ]
      }
    }
  },
  "joyent": {
    "name": "joyent",
    "classname": "FogProviderJoyent",
    "resourceTypes": {
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        }
    },
    "parameters": {
      "admin": {
        "fields": {
          "api_user": {
            "label": "CloudAPI Username",
            "type": "text",
            "tip": "Your Joyent CloudAPI user name"
          },
          "api_password": {
            "label": "CloudAPI Password",
            "type": "password",
            "tip": "Your Joyent CloudAPI password"
          },
          "ssh_keypair" : {
            "label": "Key Name",
            "type": "text",
            "tip": "Your Joyent SSH Key Name"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "tip": "Name of the SSH private key resource uploaded to the server"
          },
          "joyent_version": {
            "label": "API version",
            "type": "text",
            "default": "~7.0",
            "tip": "CloudAPI version (~7.0 default)"
          },
          "joyent_api_url": {
            "label": "Region",
            "type": "select",
            "options": [
              "https://us-east-1.api.joyentcloud.com",
              "https://us-east-2.api.joyentcloud.com",
              "https://us-east-3.api.joyentcloud.com",
              "https://us-sw-1.api.joyentcloud.com",
              "https://us-west-1.api.joyentcloud.com",
              "https://eu-ams-1.api.joyentcloud.com"
            ],
            "default": "https://us-east-1.api.joyentcloud.com",
            "override": true,
            "tip": "Joyent Region"
          }
        },
        "required": [
          [ "api_user", "api_password" ],
          [ "api_user", "ssh_keypair", "ssh_key_resource" ]
        ]
      }
    }
  },
  "openstack": {
    "name": "openstack",
    "classname": "FogProviderOpenstack",
    "resourceTypes": {
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        },
        "user_data": {
            "format": "file",
            "permissions": "0755"
        }
    },
    "parameters": { 
      "admin": {
        "fields": {
          "api_user": {
            "label": "Username",
            "type": "text",
            "tip": "Your Openstack user name"
          },
          "api_password": {
            "label": "Password",
            "type": "password",
            "tip": "Your Openstack password"
          },
          "openstack_tenant": {
            "label": "Tenant",
            "type": "text",
            "tip": "Your Openstack tenant"
          },
          "openstack_auth_url": {
            "label": "Auth URL",
            "type": "text",
            "default": "http://EXAMPLE.DOMAIN.COM:5000/v2.0/tokens",
            "tip": "Your Openstack Keystone API URL"
          },
          "ssh_keypair": {
            "label": "Key name",
            "type": "text",
            "tip": "Your Openstack SSH public key name"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "tip": "Name of the SSH private key resource uploaded to the server"
          },
          "floating_ip": {
            "type": "checkbox",
            "label": "Floating IP",
            "override": true,
            "tip": "Request a floating IP address for each node"
          },
          "network_ids": {
            "label": "Network IDs",
            "type": "text",
            "override": true,
            "tip": "Comma separated list of the UUID(s) of the network(s) for the server to attach"
          },
          "openstack_ssl_verify_peer": {
            "label": "Verify SSL peers",
            "type": "checkbox",
            "tip": "Verify peer SSL certificates"
          }
        },
        "required": [
          [
            "api_user",
            "api_password",
            "openstack_tenant",
            "openstack_auth_url",
            "ssh_keypair",
            "ssh_key_resource"
          ]
        ]
      },
      "user": {
        "fields": {
          "security_groups": {
            "type": "text",
            "label": "Security Group",
            "default": "default",
            "tip": "Openstack security groups (comma separated)"
          },
          "availability_zone": {
            "type": "text",
            "label": "Availability Zone",
            "tip": "Openstack Availability Zone"
          },
          "user_data_resource": {
            "label": "User Data Resource Name",
            "type": "text",
            "tip": "Name of the User Data file resource uploaded to the server"
          }
        },
        "required": [
          [ ]
        ]
      }
    }
  },
  "rackspace": {
    "name": "rackspace",
    "classname": "FogProviderRackspace",
    "resourceTypes": {
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        }
    },
    "parameters": {
      "admin": {
        "fields": {
          "api_user": {
            "label": "Username",
            "type": "text",
            "tip": "Your Rackspace user name"
          },
          "api_password": {
            "label": "API key",
            "type": "password",
            "tip": "Your Rackspace API key"
          },
          "rackspace_region": {
            "label": "Region",
            "type": "select",
            "options": [ "dfw", "ord", "iad", "lon", "syd", "hkg" ],
            "default": "dfw",
            "override": true,
            "tip": "Rackspace region"
          }
        },
        "required": [
          [
            "api_user",
            "api_password",
            "rackspace_region"
          ]
        ]
      },
      "user": {
        "fields": {
          "rackconnect_wait": {
            "label": "RackConnect Wait",
            "type": "checkbox",
            "tip": "Wait for RackConnect"
          },
          "ssh_keypair": {
            "label": "Key Name",
            "type": "text",
            "tip": "Your Rackspace SSH key name"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "tip": "Name of the SSH private key resource uploaded to the server"
          }
        },
        "required": [
          []
        ]
      }
    }
  }
}
